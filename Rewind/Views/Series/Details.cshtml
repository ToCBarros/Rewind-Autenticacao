<div>
    @if (this.User.IsInRole("Gestor")) { 
        <text>
        <a asp-action="Edit" asp-route-id="@Model.ID">Editar</a> |
        </text>
    }
    <a asp-action="Index">Voltar a lista</a>
</div>
