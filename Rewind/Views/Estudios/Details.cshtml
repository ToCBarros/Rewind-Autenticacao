@model Rewind.Models.Estudios

@{
    ViewData["Title"] = "Detalhes";
}

<h1>Detalhes</h1>

<div>
    <h4>Estudios</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Estudio)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Estudio)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Pais)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Pais)
        </dd>
    </dl>
</div>
<div>
    @*verifica se o utilizador é gestor*@
    @if (this.User.IsInRole("Gestor")) {
        <text>
        <a asp-action="Edit" asp-route-id="@Model.ID">Editar</a> |
        </text>
    }
    <a asp-action="Index">Voltar a lista</a>
</div>
