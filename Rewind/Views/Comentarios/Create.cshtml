@model Rewind.Models.Comentarios

@{
    ViewData["Title"] = "Criar";
}

<h1>Criar</h1>

<h4>Comentarios</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div hidden class="form-group">
                <label asp-for="UtilizadoresID" class="control-label"></label>
                <select asp-for="UtilizadoresID" class ="form-control" asp-items="ViewBag.UtilizadoresID"></select>
            </div>
            <div hidden class="form-group">
                <label asp-for="SeriesID" class="control-label"></label>
                <input asp-for="SeriesID" class ="form-control" type="text" value="@ViewBag.id" readonly>
            </div>
            <div hidden class="form-group">
                <label asp-for="Estado" class="control-label"></label>
                <input asp-for="Estado" class="form-control" />
                <span asp-validation-for="Estado" class="text-danger"></span>
            </div>
            @*<div hidden class="form-group">
                <label asp-for="Data" class="control-label"></label>
                <input asp-for="Data" class="form-control" />
                <span asp-validation-for="Data" class="text-danger"></span>
            </div>*@
            <div class="form-group">
                <label asp-for="Comentario" class="control-label"></label>
                <input asp-for="Comentario" class="form-control" />
                <span asp-validation-for="Comentario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Estrelas" class="control-label"></label>
                <input asp-for="Estrelas" class="form-control" />
                <span asp-validation-for="Estrelas" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Details" asp-controller="Series" asp-route-id="@ViewBag.id">Voltar a série</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
