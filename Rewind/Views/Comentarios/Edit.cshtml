@model Rewind.Models.Comentarios

@{
    ViewData["Title"] = "Editar";
}

<h1>Editar</h1>

<h4>Comentarios</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div hidden class="form-group">
                <label asp-for="UtilizadoresID" class="control-label"></label>
                <select asp-for="UtilizadoresID" class="form-control" asp-items="ViewBag.UtilizadoresID"></select>
                <span asp-validation-for="UtilizadoresID" class="text-danger"></span>
            </div>
            <div hidden class="form-group">
                <label asp-for="SeriesID" class="control-label"></label>
                <select asp-for="SeriesID" class="form-control" asp-items="ViewBag.SeriesID"></select>
                <span asp-validation-for="SeriesID" class="text-danger"></span>
            </div>
            <div hidden class="form-group">
                <label asp-for="Estado" class="control-label"></label>
                <input asp-for="Estado" class="form-control" />
                <span asp-validation-for="Estado" class="text-danger"></span>
            </div>
            @*<div class="form-group">
                <label asp-for="Data" class="control-label"></label>
                <input asp-for="Data" class="form-control" />
                <span asp-validation-for="Data" class="text-danger"></span>
            </div>*@
            <div class="form-group">
                <label asp-for="Comentario" class="control-label"></label>
                <input asp-for="Comentario" class="form-control" />
                <span asp-validation-for="Comentario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Estrelas" class="control-label"></label>
                <input asp-for="Estrelas" class="form-control" />
                <span asp-validation-for="Estrelas" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-route-id="@Model.Serie.ID">Voltar aos comentários</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
