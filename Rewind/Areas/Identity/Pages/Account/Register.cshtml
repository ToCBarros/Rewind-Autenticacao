@page
@model RegisterModel
@{
    ViewData["Title"] = "Registar";
}

<h1>@ViewData["Title"]</h1>
<form asp-route-returnUrl="@Model.ReturnUrl" method="post">

    <div class="row">
        <div class="col-md-4">
            <h4>Criar uma nova conta.</h4>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Registar</button>
        </div>



        <div class="col-md-6 col-md-offset-2">

            @*Pedir ao user que preencha os dados do utilizador de website*@
            <h4>Dados do Utilizador</h4>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Utilizador.Utilizador" class="control-label"></label>
                <input asp-for="Input.Utilizador.Utilizador" class="form-control" />
                <span asp-validation-for="Input.Utilizador.Utilizador" class="text-danger"></span>
            </div>
            <div hidden class="form-group">
                <label asp-for="Input.Utilizador.Email" class="control-label"></label>
                <input asp-for="Input.Utilizador.Email" value="default1234@default1234.com" class="form-control" />
                <span asp-validation-for="Input.Utilizador.Email" class="text-danger"></span>
            </div>
        </div>
    </div>
</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
